#include <iostream>
using namespace std;

int main() {
    int n;
    float rumus,jumlah,total;
    
    cout << "Massukan jumlah angka n : ";
    cin >> n;
    
    jumlah=0;
    total=0;
    rumus=-1;
   
    for(int x=1; x<=n; x++){
    rumus=(rumus*(-1));
    total=rumus/x;
    jumlah= jumlah + total;
    if(x==1)
    cout << "-("<<total<<")";
    if(x>1)
    cout << "+("<<total<<")";
    }
    cout << endl;
    cout << "Hasil perhitungan fungsi : " << jumlah;
} 
